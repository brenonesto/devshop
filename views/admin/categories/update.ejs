<%- include ('../header') %>

<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop bg-primary">
	<div class="container clearfix">
		<h2 class="title-page">Admin</h2>

		<nav class="float-left">
			<ol class="breadcrumb text-white">
				<li class="breadcrumb-item"><a href="/">Home</a></li>
			</ol>
		</nav>
	</div> <!-- container //  -->
</section>
<!-- ========================= SECTION INTRO END// ========================= -->

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content bg padding-y">
	<div class="container">
		<a href="/admin/categorias/nova" class="btn btn-primary"> Nova Categoria </a>
		<div class="row">
			<main class="col-sm-12">
				<div class="card">
					<header class="card-header">
						<h4 class="card-title mt-2">Editar categoria</h4>
					</header>
					<article class="card-body">
						<form method="post">
							<div class="form-group">
									<label>Categoria</label>
									<input type="text" name="category" class="form-control <% if(errors.indexOf('category') >= 0) { %> is-invalid <% } %>" placeholder="" value="<%= form.category %>">
										<div class="invalid-feedback">
											Por favor, informe uma categoria.
										</div>
							</div> <!-- form-row end.// -->
							<div class="form-group">
								<label>Descrição</label>
								<textarea name="description" class="form-control <% if(errors.indexOf('description') >= 0) { %> is-invalid <% } %>" placeholder=""><%= form.description %></textarea>
								<div class="invalid-feedback">
									Por favor, informe uma descrição.
								</div>
							</div> <!-- form-group end.// -->
							<div class="form-group">
								<button type="submit" class="btn btn-primary btn-block"> Salvar categoria </button>
							</div> <!-- form-group// -->
						</form>
					</article> <!-- card-body end .// -->
				</div> <!-- card.// -->

			</main> <!-- col.// -->
		</div>
	</div> <!-- container .//  -->
</section>




<%- include('../../footer') %></div>